{% extends 'base.html.twig' %}

{% block body %}
    <h2>{{ title }}</h2>
    {% if error is defined %}
        <div class="alert alert-danger">
            {{ error.message | trans }} {{ 'user.bad-credentials.swear' | trans }}
        </div>
    {% endif %}

    <form action="{{ action }}" method="post">
        <div class="form-group">
            <label for="userName">Login</label>
            <input type="text" name="_username" class="form-control"
                   id="userName" placeholder="Login" required>

        </div>
        <div class="form-group">
            <label for="password">Mot de passe</label>
            <input type="text" name="_password" class="form-control"
                   id="password" placeholder="password" required>

        </div>
        <div>
            <button class="btn btn-primary btn-block" type="submit" id="valider">Connexion</button>
        </div>


    </form>

{% endblock %}

{% block aside %}

{% endblock %}

